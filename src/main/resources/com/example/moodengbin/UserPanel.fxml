<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.moodengbin.UserPanelController">
    <Label text="User Phone Number:" />
    <TextField fx:id="usernameField" promptText="กรอกหมายเลขโทรศัพท์" />

    <Button text="Load User Data" fx:id="loadUserButton" onAction="#loadUserData" />

    <Label text="Menu:" />
    <TextField fx:id="menuField" promptText="ชื่อเมนู" />

    <Label text="Price:" />
    <TextField fx:id="priceField" promptText="ราคา" />

    <Button text="Update Data" fx:id="updateButton" onAction="#updateUserData" />
</VBox>
